        "@types/react-dom": "^18",
        "cross-env": "^7.0.3",
        "eslint": "^9.22.0",
        "eslint-config-next": "^15.2.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
