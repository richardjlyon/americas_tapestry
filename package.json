{
    "name": "americas-tapestry",
    "version": "1.0.0",
    "description": "A visual exploration of cultural diversity across the American landscape",
    "private": true,
    "packageManager": "npm@10.8.2",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "dev": "next dev",
        "dev:linux": "chromium --remote-debugging-port=9222 --headless & sleep 2 && next dev",
        "dev:mac": "next dev",
        "build": "next build",
        "build:clean": "rm -rf .next && next build",
        "start": "next start",
        "start:clean": "npm run build:clean && npm run start",
        "lint": "next lint",
        "typecheck": "tsc --noEmit",
        "format": "npx @biomejs/biome format --write ./src/app ./src/components ./src/lib ./src/hooks",
        "analyze": "cross-env ANALYZE=true next build",
        "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
        "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
        "perf": "npm run build && npm run start",
        "test": "NODE_OPTIONS=\"--disable-warning=DEP0040\" jest",
        "test:watch": "NODE_OPTIONS=\"--disable-warning=DEP0040\" jest --watch",
        "test:coverage": "NODE_OPTIONS=\"--disable-warning=DEP0040\" jest --coverage",
        "test:refactor": "npm run test:components && npm run test:e2e",
        "test:components": "NODE_OPTIONS=\"--disable-warning=DEP0040\" jest --testPathPattern=component-integrity",
        "test:e2e": "NODE_OPTIONS=\"--disable-warning=DEP0040\" playwright test refactor-safety.spec.ts",
        "test:quick": "NODE_OPTIONS=\"--disable-warning=DEP0040\" jest --testPathPattern=simple-smoke",
        "test:all": "npm run test:refactor"
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.1",
        "@radix-ui/react-accordion": "^1.2.2",
        "@radix-ui/react-alert-dialog": "^1.1.4",
        "@radix-ui/react-aspect-ratio": "^1.1.1",
        "@radix-ui/react-avatar": "^1.1.2",
        "@radix-ui/react-checkbox": "^1.1.3",
        "@radix-ui/react-collapsible": "^1.1.2",
        "@radix-ui/react-context-menu": "^2.2.4",
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-dropdown-menu": "^2.1.4",
        "@radix-ui/react-hover-card": "^1.1.4",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-menubar": "^1.1.4",
        "@radix-ui/react-navigation-menu": "^1.2.3",
        "@radix-ui/react-popover": "^1.1.4",
        "@radix-ui/react-progress": "^1.1.1",
        "@radix-ui/react-radio-group": "^1.2.2",
        "@radix-ui/react-scroll-area": "^1.2.2",
        "@radix-ui/react-select": "^2.1.4",
        "@radix-ui/react-separator": "^1.1.1",
        "@radix-ui/react-slider": "^1.2.3",
        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-switch": "^1.1.2",
        "@radix-ui/react-tabs": "^1.1.2",
        "@radix-ui/react-toast": "^1.2.4",
        "@radix-ui/react-toggle": "^1.1.1",
        "@radix-ui/react-toggle-group": "^1.1.1",
        "@radix-ui/react-tooltip": "^1.1.6",
        "@types/leaflet": "^1.9.16",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "autoprefixer": "^10.4.20",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "1.0.4",
        "date-fns": "2.30.0",
        "dotenv": "^16.4.7",
        "embla-carousel-react": "^8.5.2",
        "gray-matter": "^4.0.3",
        "input-otp": "1.4.1",
        "leaflet": "^1.9.4",
        "lucide-react": "^0.454.0",
        "mapbox-gl": "^3.10.0",
        "next": "^15.4.2",
        "next-themes": "^0.4.4",
        "react": "^18",
        "react-day-picker": "8.10.1",
        "react-dom": "^18",
        "react-hook-form": "^7.54.1",
        "react-leaflet": "4.2.1",
        "react-map-gl": "^8.0.1",
        "react-resizable-panels": "^2.1.7",
        "recharts": "2.15.0",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "resend": "^4.0.1",
