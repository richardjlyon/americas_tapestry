{
  "version": 2,
  "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
  "outputDirectory": ".next",
  "public": true,
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840],
    "minimumCacheTTL": 60
  },
  "routes": [
    {
      "src": "/content/(.*)",
      "dest": "/content/$1",
      "continue": true
    },
    {
      "src": "/content/(.*)",
      "headers": { "cache-control": "public, max-age=86400" },
      "continue": true
    },
    {
      "src": "/video/(.*)",
      "headers": { "cache-control": "public, max-age=86400" },
      "continue": true
    },
    {
      "handle": "filesystem"
    }
  ]
}